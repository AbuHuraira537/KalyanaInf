
<link rel="stylesheet" href="~/css/Login.css">
<div class="login-page">
    <div class="form">
        <h3>Please Proide Email and Phone Number:</h3>
        <p>Note: Email you provided on Register Time</p>
        @Html.AntiForgeryToken()
        <form class="login-form" asp-action="ForgetPassword" method="post">
            <input type="text" placeholder="Mobile number" name="mob" id="mob" class="font-weight-bold" />
            <input type="email" placeholder="Email" name="email" id="email" class="font-weight-bold" />
            <input type="submit" value="SendMail" class="btn btn-info" id="sub" style="background-color:olivedrab" />
            
        </form>
    </div>
</div>
@ViewBag.er

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
