@model IEnumerable<KalyanaInfo.Models.Person>
            @*
control this search ajax not http
*@
 <h1>Peoples</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
   

    @foreach (var item in Model)
    {

    <div class="col-md-5 m-2 d-inline-block">

        <div class="card border-primary  d-inline-block col-md-6 " style="max-width: 30rem;">
            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="card-header">
                    <span>
                        <img src="~/Images/PersonImages/@item.Image" alt="No Image" class="img-thumbnail" style="border-radius:100%;border:1px solid gray;display:inline-block" width="100" height="100" />
                    </span>
                    <span>@Html.DisplayFor(modelItem => item.Name)</span>
                    <p>     @Html.DisplayFor(modelItem => item.Email)</p>
                </div>
                <div class="card-body">
                    <p>Adress:@Html.DisplayFor(modelItem => item.Address)</p>
                </div>
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
        </div>
    </div>

   

    }

