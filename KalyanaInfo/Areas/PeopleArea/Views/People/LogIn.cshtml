

<link rel="stylesheet" href="~/css/Login.css">
<div class="login-page">
    <div class="form">
        <h3>SignIn in Kalyana</h3>
          <form class="login-form" asp-action="LogIn" method="post">
            <input type="text" placeholder="Mobile number" name="mob" id="mob" />
            <input type="password" placeholder="password" name="pass" id="pass" />
            <input type="submit" value="login" class="btn btn-info" id="sub" style="background-color:olivedrab"  />
            <p class="message">Not registered? <a asp-area="PeopleArea" asp-controller="People" asp-action="Create">Create an account</a></p>
            <p class="message">Forget Password? <a asp-area="PeopleArea" asp-controller="People" asp-action="ForgetPassword">Forget Password</a></p>

        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
