@model IEnumerable<KalyanaInfo.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">
  <div class="text-center">
      <img src="~/Images/PersonImages/@Context.Session.GetString("img")" style="height:60px;width:60px;border-radius:50%;margin-right:8px" /><span>@Context.Session.GetString("name")</span>
     <input type="text" disabled placeholder="Whats in your mind" style="border-radius:20px" />
</div>
        </a>
</p>
@foreach (var item in Model) {
        
        <div class="card mb-3">
            <div>
                <h3 class="card-header"><img src="~/Images/PersonImages/@item.User.Image" style="height:60px;width:60px;border-radius:50%;margin-right:4px" />@item.User.Name<span>@item.CreatedDate</span></h3>

            </div>
            <div class="card-body">
                @if (!item.Title.Equals("notitle"))
                {
                    <h5 class="card-title">@item.Title</h5>
                }
                <p class="card-text">@item.Description</p>
            </div>
            @if (!item.Images.Equals("noimage"))
            {
                <img style="height: 200px; width: 99%; display: block; margin-bottom:3px" src="~/Images/PostImages/@item.Images" alt="Card image">
            }
            @if (!item.Video.Equals("video"))
            {
                <video style="height: 200px; width: 99%; display: block; margin-bottom:3px" src="@item.Video" controls autoplay></video>
            }
        <div class="card-body">
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Commint</a>
            <a asp-action="Index" class="btn btn-secondary"><span class="fa fa-share"></span></a>
        </div>

        </div>
}
