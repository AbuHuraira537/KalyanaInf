@model KalyanaInfo.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" name="PostForm" id="PostForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title (*Optinal)</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Post Content (*required)</label>
                <textarea asp-for="Description" class="form-control" required maxlength="200"  ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <p><input id="image" name="image" type="file" accept="image/*" onchange="loadFile(event)" style="display:none;" ></p>
                <p><label for="image" style="cursor: pointer;">UploadImage (*optional)</label></p>
                <p id="i"><img id="output" width="150" height="150" style="border:1px solid black;border-radius:50%" /></p>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <div class="form-group">
                <p><input id="video" name="video" type="file" accept="video/*" onchange="loadFileVideo(event)" style="display: none;"></p>
                <p><label for="video" style="cursor: pointer;">UploadVideo(*Optional)</label></p>
                <p style="margin-left:auto;margin-right:auto" id="v">
                    <video id="output1"  style="border:1px solid black;width:100vh;height:50vh" controls>
                        this tag is not available in your browser
                    </video>
                </p>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{

<script>
    $(function () {
        $("#i").fadeOut();
        $("#v").fadeOut();
    });
    
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
        $("#i").fadeIn(); 

    };
    var loadFileVideo = function (event) {
        var video = document.getElementById('output1');
        video.src = URL.createObjectURL(event.target.files[0]);
        $("#v").fadeIn();
    };

</script>

}