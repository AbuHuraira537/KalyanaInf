@model KalyanaInfo.Models.Shope


@{
    ViewData["Title"] = "Details";
}@{ 
    var i = 0;
    var  images = Model.Images.Split(",");
}
    <h3>ShopeImages</h3>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @foreach (var a in images)
            {
            <li data-target="#carouselExampleIndicators-@a" data-slide-to="@i"></li>
            i++;
            }
            
        </ol>
        <div class="carousel-inner">
            
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/ShopeImages/@images[0]" alt="First slide">
                </div>
            
            @foreach (var img in images)
            {
                <div class="carousel-item ">
                    <img class="d-block w-100" src="~/Images/ShopeImages/@img" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Owner</h5>
                        <p>Mr. @Model.User.Name is the owner</p>

                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>



















<section id="person">
    <div>
        @if ((Context.Session.GetInt32("id") == Model.Id))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">EditShopeDdetails</a>
        }
        @if ((Context.Session.GetInt32("id") == Model.Id))
        {
            <a class="btn btn-danger " data-toggle="modal" data-target="#exampleModal-@Model.Id">RemoveShope</a>
        }
        <a asp-action="Index" class="btn btn-primary">Home</a>
    </div>
    <div class="modal" id="exampleModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Really want to delete...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="delperson">ConfirmDelete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mr-auto ml-auto mt-3 ">
        <h3>@Html.DisplayFor(model => model.Name)</h3>
    </div>
    <hr />
    <div>
        <h4>@Html.DisplayFor(model => model.Name) Details:</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-12 thead-light border-bottom mt-3" style="color:royalblue" id="Pinfo"><span class="fa fa-chevron-circle-down"></span> Shope Info</dt>
            <dd></dd>
        </dl>
        <dl id="PInfo">
            <dt class="col-sm-2"> OwnerName</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.User.Name)</dd>
            <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
        </dl>
        <dl>
            <dt class="col-sm-12 font-weight-bold border-bottom mt-3" style="color:royalblue" id="Cinfo"><span class="fa fa-chevron-circle-down"></span>Contact Info</dt>
            <dd></dd>
        </dl>
        <dl id="CInfo">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LongDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LongDescription)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            
        </dl>
        <input type="hidden" value="@Model.Id" id="shop" name="shop" />
    </div>
    
</section>







@section Scripts
{

    <script>
        $('.carousel').carousel();
        $(function () {

            $("#PInfo").hide();
            $("#CInfo").hide();
         });
        $("#Pinfo").click(function () {
            $("#PInfo").toggle();
        });

        $("#Cinfo").click(function () {
            $("#CInfo").toggle();
        });
        $(function () {
            var depid = $("#shop").val();

                $.ajax({
                url: '/ShopeArea/Shopes/DeleteShope',
                type: 'POST',
                    data: {
                        id: depid
                },
                success: function (returndata)
                {
                    if (returndata == "1")
                    {
                        $("#PostDiv").hide();
                        $("#exampleModal-" + depid).modal('hide');
                    } else
                    {
                        alert("Not Found");
                    }
                },
                Error: function (er) {
                    alert(er)
                }
            })
            })
        });
        $(function () {

            $("#delperson").click(function () {

                $.ajax({
                url: '/PeopleArea/People/DeletePerson',
                type: 'POST',
                data: {
                    id:@Model.Id
                },
                success: function (returndata)
                {
                    if (returndata == "1")
                    {
                        $("#person").hide();
                        $("#exampleModal-@Model.Id").modal('hide');
                    }
                    else
                    {
                        alert(returndata);
                        alert("Not Found");
                    }
                },
                Error: function (er) {
                    alert(er)
                }



            })
           });

        });


    </script>



}
